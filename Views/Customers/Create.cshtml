@model Bangazon.ViewModels.CreateCustomerViewModel   
@*@model (lowercase "m") is a reserved keyword in Razor views to declare the model type
Model (capital "m") references the instantiation of the model.*@
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Create an Account</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Customer.FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Customer.LastName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Customer.StreetAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Customer.StreetAddress" class="form-control" />
                <span asp-validation-for="Customer.StreetAddress" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"  />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Products" asp-action="Index">Back to Product Listing</a>
</div>
@model IEnumerable<Bangazon.Models.Product>
@using Bangazon.Models;

@{
    ViewData["Title"] = "Products";
}

<h2>@ViewData["Title"]</h2>

@foreach (Product item in Model)
{
    <div class="row">
        <div class="col-md-3">@Html.DisplayFor(modelItem => item.Title)</div>
        <div class="col-md-3">@Html.DisplayFor(modelItem => item.Price)</div>
        <div class="col-md-3">@Html.DisplayFor(modelItem => item.Description)</div>
        <div class="col-md-3">
            <a asp-action="Detail" asp-route-id="@item.ProductId">Details</a>
        </div>
    </div>
}
@model Bangazon.ViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h2>@Html.DisplayFor(model => model.Product.Title)</h2>
   @if (@Model.ChosenCustomer.CustomerId != 0) {
                        <h3>
                         Hello, @Model.ChosenCustomer.FirstName!</h3>
                    }
                    else
                     {
  <h4>Create an Account to Purchase This Item!</h4>
  } 

<div class="row">
    <div class="col-md-3">@Html.DisplayFor(model => model.Product.Description)</div>
    <div class="col-md-3">@Html.DisplayFor(model => model.Product.Price)</div>
    <div class="col-md-3">@Html.DisplayFor(model => model.Product.DateCreated)</div>
    <div class="col-md-3"><a asp-action="Purchase" asp-route-id="@Model.Product.ProductId">Purchase</a></div>
</div>

<div>
    Seller: @Html.DisplayFor(model => model.Product.Customer.FirstName) 
    @Html.DisplayFor(model => model.Product.Customer.LastName)
</div>

<div>
    &lt;&lt; <a asp-action="Index">Back to List</a>
</div>
